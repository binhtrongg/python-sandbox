# Application Configuration
APP_NAME=Python Sandbox
VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Security Configuration
MAX_CODE_LENGTH=50000
MAX_COMPLEXITY=20

# Forbidden imports (comma-separated)
FORBIDDEN_IMPORTS=os,subprocess,socket,sys,importlib,ctypes

# Executor Configuration
# Provider: docker (default, works everywhere) or firecracker (Linux only, 8-16x faster)
EXECUTOR_PROVIDER=docker
EXECUTOR_FALLBACK_PROVIDERS=docker

# Docker Configuration
DOCKER_IMAGE=python-sandbox:latest
DOCKER_TIMEOUT=30
DOCKER_MEMORY=128m
DOCKER_MEMORY_SWAP=128m
DOCKER_CPU_QUOTA=50000
DOCKER_PIDS_LIMIT=50

# Firecracker Configuration (Linux with KVM only)
# See docs/FIRECRACKER_IMPLEMENTATION.md for setup
FIRECRACKER_KERNEL_PATH=/var/firecracker/vmlinux
FIRECRACKER_ROOTFS_PATH=/var/firecracker/rootfs.ext4
FIRECRACKER_SOCKET_PATH=/tmp/firecracker
FIRECRACKER_MEMORY_MB=128
FIRECRACKER_VCPU_COUNT=1

# File Extraction Limits
MAX_FILE_SIZE=10485760
MAX_TOTAL_SIZE=52428800
MAX_FILE_COUNT=10

# Output Limits
MAX_OUTPUT_SIZE=10240

# Storage Configuration - Cloudflare R2
STORAGE_ENABLED=false
STORAGE_PROVIDER=r2

# R2 Configuration
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
STORAGE_R2_BUCKET=your-bucket-name
STORAGE_R2_ACCOUNT_ID=your-account-id
STORAGE_R2_ACCESS_KEY=your-access-key-id
STORAGE_R2_SECRET_KEY=your-secret-access-key
STORAGE_R2_PREFIX=sandbox
# Optional: If you have a custom domain or public bucket
STORAGE_R2_PUBLIC_URL=

# Storage Cleanup
STORAGE_CLEANUP_DAYS=7

# Future Features (not implemented yet)
RATE_LIMIT_ENABLED=false
METRICS_ENABLED=false
